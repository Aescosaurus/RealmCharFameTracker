<Window x:Class="RealmCharFameTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealmCharFameTracker"
        mc:Ignorable="d"
		Width="800"
		Height="600"
        Title="MainWindow"
		FontSize="16">


	<Grid>
		<Rectangle x:Name="bg" Fill="gray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" />

		<Grid Margin="50">
			<Grid.RowDefinitions>
				<RowDefinition Height="2*"></RowDefinition>
				<RowDefinition Height="*"></RowDefinition>
				<RowDefinition Height="*"></RowDefinition>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<Grid Grid.Row="0" Grid.Column="0">
				<ListBox>
					<ListBoxItem>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="Search "></TextBlock>
							<TextBox x:Name="DungeonSearch" Width="100" TextChanged="DungeonSearch_TextChanged" KeyDown="DungeonSearch_KeyDown"></TextBox>
						</StackPanel>
					</ListBoxItem>
					<ListBoxItem>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="Dungeon "></TextBlock>
							<ComboBox x:Name="DungeonList" SelectionChanged="CheckStartSelectionChanged"></ComboBox>
						</StackPanel>
					</ListBoxItem>
					<ListBoxItem>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="Starting Fame "></TextBlock>
							<TextBox x:Name="StartingFame" Width="100" PreviewTextInput="Fame_PreviewTextInput" TextChanged="CheckStartTextChanged"></TextBox>
						</StackPanel>
					</ListBoxItem>
					<ListBoxItem>
						<StackPanel Orientation="Horizontal">
							<Button x:Name="StartButton" Content="Start" Margin="0,0,5,0" Click="StartButton_Click"></Button>
							<Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"></Button>
						</StackPanel>
					</ListBoxItem>
					<ListBoxItem>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="End Fame "></TextBlock>
							<TextBox x:Name="EndFame" Width="100" PreviewTextInput="Fame_PreviewTextInput" TextChanged="EndFame_TextChanged"></TextBox>
						</StackPanel>
					</ListBoxItem>
					<ListBoxItem>
						<Button x:Name="EndButton" Content="Finish" Click="EndButton_Click"></Button>
					</ListBoxItem>
				</ListBox>
			</Grid>
			
			<Grid Grid.Row="0" Grid.Column="1">
				<ListBox>
					<ListBoxItem>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="Search "></TextBlock>
							<TextBox x:Name="CharacterSearch" Width="100" TextChanged="CharacterSearch_TextChanged" KeyDown="CharacterSearch_KeyDown"></TextBox>
						</StackPanel>
					</ListBoxItem>
					<ListBoxItem>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="Character "></TextBlock>
							<ComboBox x:Name="CharacterList" SelectionChanged="CheckStartSelectionChanged"></ComboBox>
						</StackPanel>
					</ListBoxItem>
					<ListBoxItem>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="Maxing "></TextBlock>
							<TextBox x:Name="MaxAmount" Width="25" MaxLength="1" PreviewTextInput="MaxAmount_PreviewTextInput" TextChanged="CheckStartTextChanged"></TextBox>
							<TextBlock Text=" / 8"></TextBlock>
						</StackPanel>
					</ListBoxItem>
				</ListBox>
			</Grid>
		</Grid>
	</Grid>
</Window>
